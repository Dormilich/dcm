doctype html
html(lang="de")
	head
		meta(charset="utf-8")
		title DCM – DSA Charakter Manager
		//link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
		link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/spacelab/bootstrap.min.css")
		link(rel="stylesheet", href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
		//script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
	body
		nav.navbar.navbar-default(role="navigation")
			.container
				ul.nav.navbar-nav
					li
						a(href="/helden") Helden
					li
						a(href="/freunde") Freunde
					li.active
						a
							span.fa.fa-warning &nbsp;
							span Konten
					li
						a(href="/nachrichten")
							span.fa.fa-warning &nbsp;
							span Nachrichten &nbsp;
							span.badge 0
				ul.nav.navbar-nav.navbar-right
					li
						a(href="/about", title="Info")
							span.fa.fa-info-circle
					li
						a(href="/logout", title="Abmelden")
							span.fa.fa-sign-out
		.container
			.page-header.text-center
				h1
					span.fa.fa-user &nbsp;
					| Kontenverwaltung
			.row
				.col-sm-6
					.panel.panel-default
						.panel-heading
							h4
								span.fa.fa-user &nbsp;
								strong E-Mail / Passwort
						.panel-body
							if (_User.local.email)
								p
									strong E-Mail
									| : #{_User.local.email}
								p
									strong Name
									| : #{_User.local.name}
								a(href="/unlink/local").btn.btn-sm.btn-default Trennen
								| &nbsp;
								a(href="/setup/local").btn.btn-sm.btn-default Daten ändern
							else
								a(href="/connect/local").btn.btn-sm.btn-default Verbinden
				.col-sm-6
					.panel.panel-default
						.panel-heading
							h4.text-warning 
								strong OpenID
						.panel-body
							if (_User.openid.token)
								p
									strong E-Mail
									| : #{_User.openid.email}
								p
									strong Name
									| : #{_User.openid.name}
								a(href="/unlink/openid").btn.btn-sm.btn-warning Trennen
							else
								a(href="/connect/openid").btn.btn-sm.btn-warning OpenID hinzufügen
			.row
				.col-sm-6
					.panel.panel-default
						.panel-heading
							h4.text-primary
								span.fa.fa-facebook &nbsp;
								strong Facebook
						.panel-body
							if (_User.facebook.token)
								p
									strong E-Mail
									| : #{_User.facebook.email}
								p
									strong Name
									| : #{_User.facebook.name}
								a(href="/unlink/facebook").btn.btn-sm.btn-primary Trennen
							else
								a(href="/connect/facebook").btn.btn-sm.btn-primary Facebook hinzufügen
				.col-sm-6
					.panel.panel-default
						.panel-heading
							h4.text-danger
								span.fa.fa-google-plus &nbsp;
								strong Google+
						.panel-body
							if (_User.google.token)
								p
									strong E-Mail
									| : #{_User.google.email}
								p
									strong Name
									| : #{_User.google.name}
								a(href="/unlink/google").btn.btn-sm.btn-danger Trennen
							else
								a(href="/connect/google").btn.btn-sm.btn-danger Google hinzufügen
