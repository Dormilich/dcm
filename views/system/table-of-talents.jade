doctype 5
html
	head
		title Talent-Ãœbersicht
		style.
			body {
				font-family: sans-serif;
			}
			h1 {
				text-align: center;
			}
			section {
				padding: 0 5em;
			}
			table {
				min-width: 75%;
			}
			caption {
				font-size: 2em;
				font-weight: bold;
				font-family: serif;
				font-style: italic;
				padding: 0.5em;
			}
			td {
				padding: 0.2em 1em;
				border: 1px solid black;
			}
			td:nth-child(3), td:nth-child(4) {
				text-align: center;
			}
			.mitte {
				text-align: center;
			}
	body
		section
			a(href="/talent/neu") neues Talent
		section
			table
				caption Liste der Talente
				colgroup
					col(span="2", style="width: 15em;")
					col(style="width: 3em;")
					col(style="width: 10em;")
					col(style="width: 3em;")
					col
				thead
					tr
						th Talent
						th Kategorie
						th Stufe
						th Probe
						th Basis
						th Spezialisierungen
				tbody
					each val in Liste
						tr
							td
								a(href="/talent/"+val._id)= val.name
							td= val.typ
							td= val.stufe || ''
							td= val.probe.join(' / ')
							td
								if (val.standard === true)
									| X
							if Array.isArray(val.spezialisierungen)
								td= val.spezialisierungen.join(', ')
							else
								td= val.spezialisierungen