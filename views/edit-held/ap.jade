doctype html
html(lang="de")
	head
		meta(charset="utf-8")
		title AP vergeben
		link(rel="stylesheet", type="text/css", href="/edit.css")
		link(rel="stylesheet", type="text/css", href="/nav.css")
		style.
			nav a {
				width: 25%;
			}
	body
		nav
			ul#main-menu
				li
					a(href="#top") [Seitenanfang]
				li
					a(href="#save") [speichern]
				li
					a(href="/held/"+_id, title="Heldenbogen")= "â‡’ "+Person.Name.split(' ')[0]
		header#top
			h1.mitte
				a(href="/held/"+_id)= Person.Name
		main
			form(action="/ap/"+_id, method="post", accept-charset="utf-8")
				input(type="hidden", name="_method", value="put")
				
				table.data-section.mitte.eigenschaften
					caption Abenteuerpunkte
					colgroup
						col(style="width: 15%")
						col(style="width: 35%")
						col(style="width: 15%")
						col(style="width: 35%")
					tbody
						tr
							th 
								label(for="alle") gesamt:
							td 
								input#alle.mitte(type="number", name="AP[alle]", min="0", value=AP.alle)
							th 
								label(for="frei") frei:
							td 
								input#frei.mitte(type="number", name="AP[frei]", min="0", value=AP.frei)
				.mitte#save
					button(type="submit") speichern