html(lang="de")
	head
		title Liturgien hinzufügen
		link(rel="stylesheet", type="text/css", href="/show.css")
		link(rel="stylesheet", type="text/css", href="/nav-edit.css")
		script(src="/jquery-2.0.3.min.js")
		style.
			body {
				font-family: Georgia;
			}
			nav a {
				width: 10em;
			}
			.disabled {
				color: #ddd;
			}
			main, aside {
				padding: 0 5em;
			}
			tbody tr:hover {
				background-color: silver;
			}
	body
		a#top
		nav
			a(href="#top") [Seitenanfang]
			a(href="#save") [speichern]
			a(href="/held/"+_id)= "⇒ "+Person.Name.split(' ')[0]
		h1.mitte
			a(href="/held/"+_id)= Person.Name
		aside
			table.data-section.mitte.eigenschaften
				caption Liturgiekenntnis
				thead
					tr
						th Gottheit
						th LkW
				tbody
					each __lk in Weihe.Liturgiekenntnis
						tr
							td=__lk.name
							td.mitte= __lk.wert
		main
			table.data-section.mitte.eigenschaften
				caption Liturgien
				colgroup
					col(style="width: 4em;")
					col
					col(style="width: 12em")
					col(style="width: 6em;")
					col(span="2", style="width: 12em")
				thead
					tr
						td
						th Liturgie
						th Dauer
						th Ziel
						th Reichweite
						th Wirkungsdauer
				tbody
					- var __grad = {1:"I", 2:"II", 3:"III", 4:"IV", 5:"V", 6:"VI", 7:"VII"}
					each __lit, __idx in _liturgien
					- var __isAvailable  = isAvailable(Weihe.Liturgien, __lit)
						tr
							td
								input(type="hidden", name="Weihe.Liturgien[#{__idx}][_talent]", value=__lit._id)
								input.lock(type="checkbox")
							td.links
								label.name=__lit.name + " ("+__grad[__lit.grad]+")"
							td=__lit.rd
							td=__lit.ziel
							td=__lit.rw
							td=__lit.wd
			a#save
			.mitte
				button(type="submit", disabled) speichern
			
