!!! 5
html(lang="de")
	head
		title #{Person.Name.split(' ')[0]} bearbeiten
		link(rel="stylesheet", type="text/css", href="/neu.css")
		script(type="text/javascript", src="/jquery-2.0.3.min.js")
	
	body
		h1.mitte #{Person.Name.split(' ')[0]} bearbeiten
		
		form(action=url, method="post", accept-charset="utf-8")
			input(type="hidden", name="_method", value="put")
		
			fieldset
				legend Beschreibung
				ul.floatLabel
					li
						label(for="char_name") Name:
						input(name="Person[Name]", id="char_name" type="text", placeholder="Name", value=Person.Name).halfSize
					li
						label(for="char_gender") Geschlecht:
						select(name="Person[Geschlecht]", id="char_gender")
							option männlich
							option weiblich
						script $('#char_gender').val('#{Person.Geschlecht}');
					li
						label(for="char_so") Sozialstatus:
						input(name="Person[SO]", id="char_so", type="number", min="0", max="20", step="1", value=Person.SO, placeholder="Sozialstatus")
					li
						label(for="char_height") Größe:
						input(name="Person[Größe]", id="char_height", type="number", min="25", max="250", step="1", value=Person.Größe) 
						| &nbsp; Halbfinger
					li
						label(for="char_weight") Gewicht:
						input(name="Person[Gewicht]", id="char_weight", type="number", min="20", max="300", step="1", value=Person.Gewicht) 
						| &nbsp; Stein
					li
						label(for="char_alter") Alter:
						input(name="Person[Alter]", id="char_alter", type="number", min="10", step="1", value=Person.Alter)
					li
						label Tsatag:
						select#tt-tag(name="Person[Tsatag][tag]", size="1")
							- for (var day = 1; day < 31; day++)
								option(value=day)= day
						select#tt-mon(name="Person[Tsatag][monat]", size="1")
							each month, index in ["PRA", "RON", "EFF", "TRA", "BOR", "HES", "FIR", "TSA", "PHE", "PER", "ING", "RAH", "(NLT)"]
								option(value=index)= month
						input(name="Person[Tsatag][jahr]", type="number", step="1", value=Person.Tsatag.jahr)
						| &nbsp; BF
						script.
							$('#tt-tag').val('#{Person.Tsatag.tag}');
							$('#tt-mon').val('#{Person.Tsatag.monat}'); 
					li
						label(for="char_hair") Haarfarbe:
						input(name="Person[Haarfarbe]", id="char_hair" type="text", placeholder="Haarfarbe", value=Person.Haarfarbe)
					li
						label(for="char_eyes") Augenfarbe:
						input(name="Person[Augenfarbe]", id="char_eyes" type="text", placeholder="Augenfarbe", value=Person.Augenfarbe)
					li
						label(for="char_looks") Aussehen:
						textarea(name="Person[Aussehen]", id="char_looks", rows="5", placeholder="Aussehen").halfSize= Person.Aussehen
					li
						label(for="char_story") Hintergrund:
						textarea(name="Person[Hintergrund]", id="char_story", rows="5", placeholder="Hintergrund").halfSize= Person.Hintergrund

			fieldset.mitte
				button(type="submit", disabled) speichern
				button(type="reset")  reset
